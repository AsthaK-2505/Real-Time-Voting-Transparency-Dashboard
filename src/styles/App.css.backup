/* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
        'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 20px;
}

.App {
    max-width: 1800px;
    margin: 0 auto;
}

/* Dashboard */
.dashboard {
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    overflow: hidden;
}

/* Header */
.dashboard-header {
    background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
    color: white;
    padding: 30px 40px;
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
}

.dashboard-header h1 {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 5px;
}

.subtitle {
    font-size: 14px;
    opacity: 0.9;
}

.header-controls {
    display: flex;
    gap: 12px;
    align-items: center;
}

.btn {
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: inherit;
}

.btn-primary {
    background: #10b981;
    color: white;
}

.btn-primary:hover {
    background: #059669;
    transform: translateY(-2px);
}

.btn-danger {
    background: #ef4444;
    color: white;
}

.btn-danger:hover {
    background: #dc2626;
}

.btn-secondary {
    background: #6b7280;
    color: white;
}

.btn-secondary:hover {
    background: #4b5563;
}

.update-speed {
    padding: 10px 15px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    font-family: inherit;
}

.update-speed option {
    color: black;
    background: white;
}

.update-speed:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* Stats Overview */
.stats-overview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    padding: 30px 40px;
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
}

.stat-card {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    gap: 15px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
}

.stat-icon {
    font-size: 36px;
}

.stat-content h3 {
    font-size: 28px;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 4px;
}

.stat-content p {
    font-size: 13px;
    color: #64748b;
    font-weight: 500;
}

/* Dashboard Grid */
.dashboard-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 30px;
    padding: 30px 40px;
}

/* Charts Section */
.charts-section {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    grid-column: 1;
}

.chart-container {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.chart-placeholder {
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #94a3b8;
    font-size: 14px;
}

/* Anomaly Section */
.anomaly-section {
    grid-column: 2;
    grid-row: 1;
}

.anomaly-detector {
    background: white;
    padding: 24px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    max-height: 650px;
    overflow-y: auto;
}

.anomaly-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.anomaly-header h2 {
    font-size: 20px;
    font-weight: 600;
    color: #1e293b;
}

.status-badge {
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    color: white;
}

.anomaly-summary {
    display: flex;
    gap: 10px;
}

.severity-count {
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    color: white;
}

.severity-count.high {
    background: #ef4444;
}

.severity-count.medium {
    background: #f59e0b;
}

.no-anomalies {
    text-align: center;
    padding: 40px 20px;
    color: #64748b;
    font-size: 14px;
}

.anomaly-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.anomaly-item {
    display: flex;
    gap: 12px;
    padding: 16px;
    background: #f8fafc;
    border-radius: 8px;
    border-left: 4px solid #3b82f6;
    transition: all 0.2s ease;
}

.anomaly-item:hover {
    background: #f1f5f9;
    transform: translateX(4px);
}

.anomaly-icon {
    font-size: 24px;
    flex-shrink: 0;
}

.anomaly-content {
    flex: 1;
}

.anomaly-title {
    font-size: 14px;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 6px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.anomaly-type {
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 11px;
    text-transform: uppercase;
    font-weight: 600;
}

.anomaly-message {
    font-size: 13px;
    color: #475569;
    margin-bottom: 8px;
}

.anomaly-details {
    display: flex;
    gap: 15px;
    font-size: 11px;
    color: #64748b;
    font-weight: 500;
}

.severity-badge {
    padding: 6px 10px;
    border-radius: 6px;
    font-size: 11px;
    font-weight: 700;
    color: white;
    text-transform: uppercase;
    align-self: flex-start;
}

.anomaly-footer {
    text-align: center;
    padding: 16px;
    color: #64748b;
    font-size: 12px;
    border-top: 1px solid #e2e8f0;
    margin-top: 16px;
}

/* Districts Section */
.districts-section {
    grid-column: 1 / -1;
    margin-top: 10px;
}

.districts-section h2 {
    font-size: 22px;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 20px;
}

.districts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 20px;
}

/* District Card */
.district-card {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.district-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
}

.district-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20px;
}

.district-header h3 {
    font-size: 16px;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 4px;
}

.district-meta {
    font-size: 12px;
    color: #64748b;
}

.district-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    margin-bottom: 20px;
    padding: 15px;
    background: #f8fafc;
    border-radius: 8px;
}

.stat-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.stat-label {
    font-size: 11px;
    color: #64748b;
    font-weight: 500;
    text-transform: uppercase;
}

.stat-value {
    font-size: 18px;
    font-weight: 700;
    color: #1e293b;
}

.vote-distribution h4 {
    font-size: 14px;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 12px;
}

.candidate-bar {
    margin-bottom: 12px;
}

.candidate-info {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    font-weight: 500;
    color: #475569;
    margin-bottom: 6px;
}

.progress-bar {
    height: 8px;
    background: #e2e8f0;
    border-radius: 4px;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    border-radius: 4px;
    transition: width 0.5s ease;
}

/* Live Feed */
.feed-section {
    grid-column: 1 / -1;
}

.live-feed {
    background: white;
    padding: 24px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    max-height: 600px;
    overflow-y: auto;
}

.feed-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.feed-header h2 {
    font-size: 20px;
    font-weight: 600;
    color: #1e293b;
}

.live-indicator {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    font-weight: 700;
    color: #ef4444;
}

.pulse {
    width: 8px;
    height: 8px;
    background: #ef4444;
    border-radius: 50%;
    animation: pulse 2s infinite;
}

@keyframes pulse {

    0%,
    100% {
        opacity: 1;
        transform: scale(1);
    }

    50% {
        opacity: 0.5;
        transform: scale(1.2);
    }
}

.no-activity {
    text-align: center;
    padding: 40px 20px;
    color: #64748b;
    font-size: 14px;
}

.activity-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.activity-item {
    display: flex;
    gap: 12px;
    padding: 12px;
    background: #f8fafc;
    border-radius: 8px;
    border-left: 3px solid #3b82f6;
    transition: all 0.2s ease;
}

.activity-item:hover {
    background: #f1f5f9;
    transform: translateX(4px);
}

.activity-icon {
    font-size: 20px;
    flex-shrink: 0;
}

.activity-content {
    flex: 1;
}

.activity-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
}

.activity-district {
    font-size: 13px;
    font-weight: 600;
    color: #1e293b;
}

.activity-time {
    font-size: 11px;
    color: #94a3b8;
    font-weight: 500;
}

.activity-details {
    font-size: 12px;
    color: #64748b;
}

.feed-footer {
    text-align: center;
    padding: 16px;
    color: #64748b;
    font-size: 12px;
    border-top: 1px solid #e2e8f0;
    margin-top: 16px;
}

/* Footer */
.dashboard-footer {
    background: #f8fafc;
    padding: 20px 40px;
    border-top: 1px solid #e2e8f0;
    text-align: center;
}

.dashboard-footer p {
    font-size: 12px;
    color: #64748b;
}

/* Scrollbar Styling */
.anomaly-detector::-webkit-scrollbar,
.live-feed::-webkit-scrollbar {
    width: 8px;
}

.anomaly-detector::-webkit-scrollbar-track,
.live-feed::-webkit-scrollbar-track {
    background: #f1f5f9;
    border-radius: 4px;
}

.anomaly-detector::-webkit-scrollbar-thumb,
.live-feed::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 4px;
}

.anomaly-detector::-webkit-scrollbar-thumb:hover,
.live-feed::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
}

/* Responsive Design */
@media (max-width: 1400px) {
    .dashboard-grid {
        grid-template-columns: 1fr;
    }

    .charts-section {
        grid-column: 1;
    }

    .anomaly-section,
    .feed-section {
        grid-column: 1;
    }
}

@media (max-width: 768px) {
    body {
        padding: 10px;
    }

    .dashboard-header {
        padding: 20px;
    }

    .dashboard-header h1 {
        font-size: 24px;
    }

    .header-controls {
        width: 100%;
        justify-content: stretch;
    }

    .btn {
        flex: 1;
        padding: 12px 16px;
    }

    .stats-overview {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        padding: 20px;
        gap: 12px;
    }

    .dashboard-grid {
        padding: 20px;
        gap: 20px;
    }

    .charts-section {
        grid-template-columns: 1fr;
    }

    .districts-grid {
        grid-template-columns: 1fr;
    }
}